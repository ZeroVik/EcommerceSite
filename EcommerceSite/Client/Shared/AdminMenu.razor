@inject AuthenticationStateProvider AuthStateProvider
@using System.Security.Claims

@if(authorized)
{
    <a class="dropdown-item" href="admin/categories">Категории</a>
    <a class="dropdown-item" href="admin/product-types">Тип на продукта</a>
    <a class="dropdown-item" href="admin/products">Продукти</a>
    <hr />
}

@code {
    bool authorized = false;
    protected override async Task OnInitializedAsync()
    {
        string role = (await AuthStateProvider.GetAuthenticationStateAsync()).User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role).Value;
        if(role.Contains("Admin"))
        {
            authorized = true;
        }
    }
}
